@model IEnumerable<Pandami.Models.Feat>


@{
    ViewData["Title"] = "Home Feats Home";
}
<link rel="stylesheet" href="~/css/site.css" />
<h1>FEATS EN ATTENTE</h1>
<div>@DateTime.Now</div>
<div>
    <a asp-action="Creation" asp-route-id="@ViewBag.IdMembre">Créer un Feat</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                GIFTEE
            </th>
            <th>
                TYPE D'AIDE DEMANDEE
            </th>
            <th>
                JOUR DU FEAT
            </th>
            <th>
                DEBUT DU FEAT
            </th>
            <th>
                FIN DU FEAT
            </th>
            <th>
                ADRESSE
            </th>
            <th>
                ANNULATION
            </th>
            <th>
                ID
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Createur.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.NomAide)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealisationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureDebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse.NomDeVoie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnulationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <form asp-action="Details">
                    <div>
                        <input type="hidden" name="IdMembre" value="@ViewBag.IdMembre" />
                        <input type="hidden" name="IdFeat" value="@item.Id"/>
                        <input type="submit" value="Accepter le Feat" class="btn btn-primary"/>
                    </div>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>