@model Pandami.Models.ReponseHelper

@{
    ViewData["Title"] = "Desistement Feat";
}

<h1>SE DESISTER D'UN FEAT</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Feat</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Feat.RealisationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feat.RealisationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Feat.HeureDebut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feat.HeureDebut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Feat.HeureFin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feat.HeureFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcceptationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcceptationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Feat.SommePrevoir)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feat.SommePrevoir)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Feat.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feat.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Feat.Createur.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feat.Createur.Nom)
        </dd>
    </dl>
    
    <form asp-action="MeDesisterDuFeat">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="IdFeat" value="@Model.Feat.Id" />
        <input type="hidden" name="IdMembre" value="@Model.Helper.Id" />
        <input type="submit" value="Se désister" class="btn btn-danger" />
    </form>
</div>
