@model Pandami.Models.Feat

@{
    ViewData["Title"] = "Créer un Feat";

}

<h1>Créer un Feat</h1>
<h4 align="right">Membre connecté : @ViewBag.PrenomMembre @ViewBag.NomMembre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="padding-10">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Createur" value="@Model.Createur.Id" />

            <div class="form-group">
                <label asp-for="Type" class="control-label">Aide demandée</label>
                <select asp-for="Type" asp-items="@ViewBag.TypesAide" id="maListe" class="padding-10">
                    <option>Sélectionnez un type de Feat</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materiel" class="control-label"></label>
                <select asp-for="Materiel" asp-items="@ViewBag.Materiels" id="maListe" class="padding-10">
                    <option value="Aucun">Sélectionnez le matériel (si nécessaire)</option>
                </select>
                <span asp-validation-for="Materiel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealisationDate" class="control-label"></label>
                <input asp-for="RealisationDate" class="form-control" />
                <span asp-validation-for="RealisationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeureDebut" class="control-label"></label>
                <input asp-for="HeureDebut" class="form-control" value="14:00" />
                <span asp-validation-for="HeureDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeureFin" class="control-label"></label>
                <input asp-for="HeureFin" class="form-control" value="20:00" />
                <span asp-validation-for="HeureFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresse" class="control-label"></label>
                <select asp-for="Adresse" asp-items="@ViewBag.Adresse" id="maListe" class="padding-10">
                    <option value="@Model.Createur.Adresse.NomDeVoie" selected="@Model.Createur.Adresse.NomDeVoie">@Model.Createur.Adresse.NomDeVoie</option>
                </select>
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SommePrevoir" class="control-label"></label>
                <input asp-for="SommePrevoir" class="form-control" />
                <span asp-validation-for="SommePrevoir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer le Feat" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
