@model IEnumerable<Pandami.Models.Feat>

@{
    ViewData["Title"] = "HomeFeatsHome2";
}

<h1>HomeFeatHome2</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if(ViewBag.NoResult)
{
<div> Aucun Feat ne correspond à vos préférences, les avez-vous bien renseignées ?</div>
}
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.RealisationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureFin)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.EnCoursRealisation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurPlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinFeatHelper)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClotureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SommePrevoir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SommeAvancee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SommeRembourseeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnulationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EchangeMonetaire)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealisationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeureDebut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeureFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcceptationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnCoursRealisation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurPlace)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinFeatHelper)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClotureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SommePrevoir)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SommeAvancee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SommeRembourseeDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnnulationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EchangeMonetaire)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
