@model Pandami.Models.Negociation

@{
    ViewData["Title"] = "Négociation proposée";
}

<h1>Modification du Feat (négociation)</h1>
<h4>Membre connecté : @ViewBag.PrenomMembre @ViewBag.NomMembre</h4>
<hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.feat.Type.NomAide)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.feat.Type.NomAide)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.feat.RealisationDate) prévue
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.feat.RealisationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewDateProposee)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NewDateProposee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.feat.HeureDebut) prévue
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.feat.HeureDebut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeureDbtProposee)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.HeureDbtProposee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.feat.HeureFin) prévue
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.feat.HeureFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeureFinProposee)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.HeureFinProposee)
        </dd>
    </dl>
    @if (Model.DemandeurId!=ViewBag.IdMembre)
    {


        <form asp-action="AccepterNegociation" method="post">
            <div>
                <input type="hidden" name="IdMembre" value="@Model.RepondeurId" />
                <input type="hidden" name="IdFeat" value="@Model.feat.Id" />
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="submit" value="Accepter la modification demandée" class="btn btn-primary" />
            </div>
        </form>
        <form asp-action="RefuserNegociation" method="post">
            <div>
                <input type="hidden" name="IdMembre" value="@Model.RepondeurId" />
                <input type="hidden" name="IdFeat" value="@Model.feat.Id" />
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="submit" value="Refuser la modification demandée" class="btn btn-primary" />
            </div>
        </form>
    }
</div>