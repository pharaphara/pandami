@model Pandami.Models.Membre

@{
    ViewData["Title"] = "Details";
}

<h1>Mon profil</h1>
<h4>Membre connecté : @ViewBag.PrenomMembre @ViewBag.NomMembre</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naissance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naissance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sexe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sexe.NomSexe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mdp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mdp)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ModifProfil" asp-route-id="@Model.Id">Modifier</a> |
    <a asp-action="Dispo" asp-route-id="@Model.Id">Mes Disponibilités</a> |
    <a asp-action="Pref" asp-route-id="@Model.Id">Mes Préférences</a>
</div>
